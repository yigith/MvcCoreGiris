@model Kisi
@{
    ViewData["Title"] = "Duzenle";
}

<h1>Düzenle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Duzenle">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KisiAd" class="control-label"></label>
                <input asp-for="KisiAd" class="form-control" />
                <span asp-validation-for="KisiAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>
