@model MvcCoreGiris.Models.Kisi
@inject LuckyNumberService SansliSayiHizmet

@{
    ViewData["Title"] = "Yeni";
}

<h1>Yeni</h1>

<h4>Kisi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Yeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KisiAd" class="control-label"></label>
                <input asp-for="KisiAd" class="form-control" />
